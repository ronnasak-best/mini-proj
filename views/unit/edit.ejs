<%- include('../layout/header') %>
  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <nav aria-label="breadcrumb ">
      <ol class="breadcrumb bg-transparent ">
        <li class="breadcrumb-item"><a href="/category">Unit</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Unit </li>
      </ol>
    </nav>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add Cateory</h6>
      </div>
      <div class="card-body">
        <form id="form" class="row g-3" action="/unit/update" method="post">
          <input type="hidden" value="<%=  unit._id %>" name="update_id">
          <div class="form-group col-md-12">
            <label class="control-label col-sm">หน่วยนับ</label>
            <div class="col-sm-6">
              <input id="unit" type="text" class="form-control" name="name" value="<%= unit.name %>">
            </div>
          </div>
         
          <div class="form-group col-md-6">
            <label class="control-label col-sm">สถานะ</label>
            <div class="col-sm form-check form-check-inline">
              <div class="col-sm-3">
                <div class="form-check" >
                  <input type="radio" class="form-check-input" name="status" id="membershipRadios1" value="1" <%- unit.status == 1 ?'checked':''%> > Enabled
                </div>
              </div>
              <div class="col-sm-2.5">
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="status" id="membershipRadios2" value="0" <%- unit.status == 0 ?'checked':''%>> Disabled
                </div>
              </div>
            </div>
          </div>
          <div class="form-group col-md-12">
            <div class="col-sm-offset-4 col-sm">
              <button type="submit" class="btn btn-primary">บันทึก</button>
            </div>
          </div>
        </form>
      </div>
    </div>







  </div>
  <!-- /.container-fluid -->
  <%- include('../layout/footer') %>