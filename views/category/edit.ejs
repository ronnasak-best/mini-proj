<%- include('../layout/header') %>
    <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <nav aria-label="breadcrumb ">
                      <ol class="breadcrumb bg-transparent ">
                        <li class="breadcrumb-item"><a href="/category">Category</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Category </li>
                      </ol>
                    </nav>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Add Cateory</h6>
                        </div>
                        <div class="card-body">                                                 
                            <form id="form" class="row g-3" action="/category/update" method="post">
                              <input type="hidden" value="<%=  category._id %>" name="update_id">
                                <div class="form-group col-md-6">
                                    <label class="control-label col-sm">รหัสหมวดหมู่</label>
                                    <div class="col-sm">
                                      <input type="text" class="form-control" name="category_id" value="<%= category.category_id %>" disabled>
                                    </div>
                                  </div>
                                  <div class="form-group col-md-6">
                                      <label class="control-label col-sm">ชื่อหมวดหมู่</label>
                                      <div class="col-sm">
                                        <input type="text" class="form-control" name="name" value="<%= category.name %>" id="proname">
                                      </div>
                                  </div>                   
                                  <div class="form-group col-md-12">
                                      <label class="control-label col-sm">รายละเอียด</label>
                                      <div class="col-sm">
                                          <textarea class="form-control" cols="30" rows="4" id="description"" name="description"><%= category.description %></textarea>
                                      </div>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <div class="col-sm form-check form-check-inline">
                                      <div class="col-sm-3">
                                        <div class="form-check" >
                                          <input type="radio" class="form-check-input" name="status" id="membershipRadios1" value="1" <%- category.status == 1 ?'checked':''%> > Enabled
                                        </div>
                                      </div>
                                      <div class="col-sm-2.5">
                                        <div class="form-check">
                                          <input type="radio" class="form-check-input" name="status" id="membershipRadios2" value="0" <%- category.status == 0 ?'checked':''%>> Disabled
                                        </div>
                                      </div>
                                    </div>
                                </div>
                                  <div class="form-group col-md-12">
                                    <div class="col-sm-offset-4 col-sm">
                                      <button type="submit" class="btn btn-primary">บันทึก</button>
                                    </div>
                                  </div>
                            </form>
                        </div>
                    </div>
                   
                   
                       
                        

                    

                </div>
                <!-- /.container-fluid -->
<%- include('../layout/footer') %>
            