<%- include('../layout/header') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">จัดการผู้ใช้งาน</h1>
            <a href="/users/add" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i
                    class="fas fa-download fa-sm text-white-50"></i> เพิ่มผู้ใช้งาน</a>
        </div>

        <!-- alert -->
        <%if (msg) {%>
            <div style="text-align: center" class="alert alert-<%-msg.type%>">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                </strong>
                <%-msg.msg%>
            </div>
            <%}%>
                <!-- alert -->

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">รายการผู้ใช้งาน</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ลำดับ</th>
                                        <th>ชื่อ-นามสกุล</th>
                                        <th>อีเมล</th>
                                        <th>สิทธิ์การใช้งาน</th>
                                        <th>สถานะ</th>
                                        <th>แก้ไข</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0; i < user_list.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= i+1%>
                                            </td>
                                            <td>
                                                <%= user_list[i].name %>
                                                    <%= user_list[i].lname %>
                                            </td>
                                            <td>
                                                <%= user_list[i].email %>
                                            </td>
                                            <td>
                                                <%= user_list[i].role %>
                                            </td>
                                            <td> <input onchange="status('<%= user_list[i]._id%>')" data-size="xs"
                                                    data-onstyle="success" data-offstyle="danger"
                                                    id="<%= user_list[i]._id%>" type="checkbox" data-toggle="toggle"
                                                    <%=user_list[i].status==true ?'checked':''%> ></td>
                                            <td>
                                                <a href="/users/edit/<%= user_list[i]._id%>" type="button"
                                                    value="<%= user_list[i]._id%>" class="btn btn-warning"><i
                                                        class="bi bi-pencil-square"></i>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-pencil-square"
                                                        viewBox="0 0 16 16">
                                                        <path
                                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd"
                                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


              
    </div>
    <!-- /.container-fluid -->
    <%- include('../layout/footer') %>