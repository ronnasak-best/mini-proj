<%- include('../layout/header') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Receive Product</h1>

        </div>

        <div class="card shadow col-sm-8">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Receive Product</h6>
            </div>
            <div class="card-body">
                <div>
                    <img class="card-img-top img-fluid" src="/../images/products/<%= product[0].image%>"
                        style="width: 150px;height: 100px;" alt="" />
                    <p>รายการ : <%= product[0].name%>
                    </p>
                    <p>หมวดหมู่ : <%= product[0].categorise[0].name%>
                    </p>
                    <p>หน่วยนับ :<%= product[0].unit[0].name%>
                    </p>
                    <hr>
                </div>
                <form class="row g-3" action="/stock/update" method="POST">
                    <input type="hidden" name="product_id" value="<%= product[0]._id%>">
                    <input type="hidden" name="stock_id" value="<%= stock._id%>">
                    <input type="hidden" name="old_quantity" value="<%= stock.quantity%>">
                    <div class="form-group col-md-6">
                        <label class="control-label col-sm">จำนวนรับเข้า</label>
                        <div class="col-sm">
                            <input type="number" class="form-control" name="quantity"  min="0" value="<%= stock.quantity%>">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label ">ราคารับเข้า / <%= product[0].unit[0].name%></label>
                        <div class="input-group col">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">฿</span>
                            </div>
                            <input type="number" class="form-control" id="price" name="price"  min="0" value="<%= stock.price%>" pattern="^\d+(?:\.\d{1,2})?$" onblur="
                            this.parentNode.parentNode.style.backgroundColor=/^\d+(?:\.\d{1,2})?$/.test(this.value)?'inherit':'red'
                            ">
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label col-sm">หมายเหตู</label>
                        <div class="col-sm">
                            <input type="text" class="form-control" name="description" value="<%= stock.description%>">
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-sm-offset-4 col-sm">
                            <button type="submit" class="btn btn-primary">บันทึก</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>







    </div>
    <!-- /.container-fluid -->
    <%- include('../layout/footer') %>