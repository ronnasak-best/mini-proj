<%- include('../layout/header') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <nav aria-label="breadcrumb ">
            <ol class="breadcrumb bg-transparent ">
              <li class="breadcrumb-item"><a href="/stock">รับเข้าสต๊อก</a></li>
              <li class="breadcrumb-item"><a href="/stock/stock_detail/<%= product[0]._id%>">รายละเอียดวัสดุ</a></li>
              <li class="breadcrumb-item active" aria-current="page">แก้ไขวัสดุ </li>
            </ol>
          </nav>
    
        <div class="card shadow col-sm-8">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">แก้ไขวัสดุ</h6>
            </div>
            <div class="card-body">
                <div>
                    <img class="card-img-top img-fluid" src="/../images/products/<%= product[0].image%>"
                        style="width: 150px;height: 100px;" alt="" />
                    <p>รายการ : <%= product[0].name%>
                    </p>
                    <p>หมวดหมู่ : <%= product[0].categorise[0].name%>
                    </p>
                    <p>หน่วยนับ :<%= product[0].unit[0].name%>
                    </p>
                    <hr>
                </div>
                <form  id="form" class="row g-3" action="/stock/update" method="POST">
                    <input type="hidden" name="product_id" value="<%= product[0]._id%>">
                    <input type="hidden" name="stock_id" value="<%= stock._id%>">
                    <input type="hidden" name="old_quantity" value="<%= stock.quantity%>">
                    <div class="form-group col-md-6">
                        <label class="control-label col-sm">จำนวนรับเข้า</label>
                        <div class="col-sm">
                            <input type="number" class="form-control" name="quantity"  value="<%= stock.quantity%>" id="quantity">
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label col-sm">หมายเหตู</label>
                        <div class="col-sm">
                            <input type="text" class="form-control" name="description" value="<%= stock.description%>" >
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-sm-offset-4 col-sm">
                            <button type="submit" class="btn btn-primary">บันทึก</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>







    </div>
    <!-- /.container-fluid -->
    <%- include('../layout/footer') %>