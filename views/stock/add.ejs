<%- include('../layout/header') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Receive Product</h1>

        </div>

        <div class="card shadow col-sm-8">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Receive Product</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2"><img class="card-img-top img-fluid" src="/../images/products/<%= product[0].image%>"
                        style="width: 150px;height: 100px;" alt="" />
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-1">รายการ : <%= product[0].name%>
                        </p>
                        <p class="mb-1">หมวดหมู่ : <%= product[0].categorise[0].name%>
                        </p>
                        <p>หน่วยนับ :<%= product[0].unit[0].name%>
                        </p>
                        
                    </div>
                    
                </div><hr>
                <form id="form" class="row g-3" action="/stock/insert" method="POST">
                    <input type="hidden" name="product_id" value="<%= product[0]._id%>">
                    <div class="form-group col-md-6">
                        <label class="control-label col-sm">จำนวนรับเข้า</label>
                        <div class="col-sm">
                            <input type="number" class="form-control" name="quantity" id="quantity">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label ">ราคารับเข้า / <%= product[0].unit[0].name%></label>
                        <div class="input-group col">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">฿</span>
                            </div>
                            <input type="number" class="form-control" id="price" name="price" >
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label col-sm">หมายเหตู</label>
                        <div class="col-sm">
                            <input type="text" class="form-control" name="description" >
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-sm-offset-4 col-sm">
                            <button type="submit" class="btn btn-primary">บันทึก</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>







    </div>
    <!-- /.container-fluid -->
    <%- include('../layout/footer') %>